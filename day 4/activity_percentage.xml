<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".PercentageActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Percentage Calculator"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginVertical="20sp"
        android:gravity="center"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="55dp" />

    <EditText
        android:id="@+id/num1"
        android:background="@drawable/input_border"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_marginHorizontal="10dp"
        android:autofillHints="Enter number"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:hint="Marks 1"
        android:textSize="20sp"
        android:inputType="number" />
    <EditText
        android:id="@+id/num2"
        android:background="@drawable/input_border"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_marginHorizontal="10dp"
        android:autofillHints="Enter number"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Marks 2"
        android:textSize="20sp"
        android:inputType="number" />
    <EditText
        android:id="@+id/num3"
        android:background="@drawable/input_border"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:layout_marginHorizontal="10dp"
        android:autofillHints="Enter number"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Marks 3"
        android:textSize="20sp"
        android:inputType="number" />
    <EditText
        android:id="@+id/num4"
        android:background="@drawable/input_border"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:autofillHints="Enter number"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Marks 4"
        android:textSize="20sp"
        android:inputType="number" />
    <EditText
        android:id="@+id/num5"
        android:background="@drawable/input_border"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:layout_marginHorizontal="10dp"
        android:autofillHints="Enter number"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Marks 5"
        android:textSize="20sp"
        android:inputType="number" />

    <Button
        android:id="@+id/per"
        android:layout_width="wrap_content"
        android:background="@drawable/custom_button"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="Percentage" />


</androidx.appcompat.widget.LinearLayoutCompat>